@model Aulas.Models.UnidadesCurriculares

@{
    ViewData["Title"] = "Unidaade Curricular";
}

<h1>Detalhes da Unidade Curricular</h1>

<h4>@Model.Nome</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoCurricular)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoCurricular)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Semestre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semestre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Curso.Nome)
        </dd>

        @*Lista dos Professores*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class="col-sm-10">
            <ul>
            @foreach (var prof in Model.ListaProfessores)
            {
                <li> prof.Nome</li>
            }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Regressar à Lista</a>
</div>
